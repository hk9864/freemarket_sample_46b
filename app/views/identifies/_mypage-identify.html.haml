.l-content
  %h3.l-content__identification 本人情報の登録
  .l-content__identify-area
    .l-content__identify-area__textarea
      お客さまの本人情報をご登録ください。
      %br
      登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
      .l-content__identify-area__textarea__about-upload
        =link_to users_path, class: "l-content__identify-area__textarea__about-upload__path" do
          .l-content__identify-area__textarea__about-upload__path__text
            .l-content__identify-area__textarea__about-upload__path__text__about-identification 本人確認書類のアップロードについて
          = icon 'fa', 'angle-right', class: 'l-content__identify-area__textarea__about-upload__path__arrow-right'



    .l-content__identify-area__form
      .l-content__identify-area__form__title
        お名前
      %p.l-content__identify-area__form__content
        = @user_detail.get_fullname

    .l-content__identify-area__form
      .l-content__identify-area__form__title
        お名前カナ
      %p.l-content__identify-area__form__content
        = @user_detail.get_fullname_kana

    .l-content__identify-area__form
      .l-content__identify-area__form__title
        生年月日
      %p.l-content__identify-area__form__content
        = @user_detail.get_birth

    = form_for(@user_detail, url: identify_path(@user_detail)) do |f|
      .l-content__identify-area__form
        %label.l-content__identify-area__form__title 郵便番号
        %span.l-content__identify-area__form__status 任意
        .l-content__identify-area__form__content
          = f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "例) 1234567", class: "l-content__identify-area__form__content__type-space"
          .error_message_box
            -if @user_detail.errors.full_messages_for(:postal_code).present?
              = @user_detail.errors.full_messages_for(:postal_code).first


      .l-content__identify-area__form
        %label.l-content__identify-area__form__title 都道府県
        %span.l-content__identify-area__form__status 任意
        .l-content__identify-area__form__content
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "--"}, {class: "l-content__identify-area__form__content__type-space-select"}
          .icon__arrow--bottom
            = icon 'fa', 'angle-down'

      .l-content__identify-area__form
        %label.l-content__identify-area__form__title 市町区村
        %span.l-content__identify-area__form__status 任意
        .l-content__identify-area__form__content
          = f.text_field :city, autofocus: true, autocomplete: "city", placeholder: "例) 横浜市緑区", class: "l-content__identify-area__form__content__type-space"
          .error_message_box
            -if @user_detail.errors.full_messages_for(:city).present?
              = @user_detail.errors.full_messages_for(:city).first

      .l-content__identify-area__form
        %label.l-content__identify-area__form__title 番地
        %span.l-content__identify-area__form__status 任意
        .l-content__identify-area__form__content
          = f.text_field :block, autofocus: true, autocomplete: "block", placeholder: "例) 青山1-1-1", class: "l-content__identify-area__form__content__type-space"
          .error_message_box
            -if @user_detail.errors.full_messages_for(:block).present?
              = @user_detail.errors.full_messages_for(:block).first

      .l-content__identify-area__form
        %label.l-content__identify-area__form__title 建物名
        %span.l-content__identify-area__form__status 任意
        .l-content__identify-area__form__content
          = f.text_field :building, autofocus: true, autocomplete: "building", placeholder: "例) 柳ビル103", class: "l-content__identify-area__form__content__type-space"
          .error_message_box
            -if @user_detail.errors.full_messages_for(:building).present?
              = @user_detail.errors.full_messages_for(:building).first

      = f.submit "登録する", class: "l-content__identify-area__btn"

      .l-content__identify-area__textarea__about-upload{id: "about-registration"}
        =link_to users_path, class: "l-content__identify-area__textarea__about-upload__path" do
          .l-content__identify-area__textarea__about-upload__path__text
            本人情報の登録について
          = icon 'fa', 'angle-right', class: 'l-content__identify-area__textarea__about-upload__path__arrow-right'





